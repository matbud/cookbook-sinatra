<h1>Create a new recipe</h1>

<form>
  <label for="name">Name of the recipe:</label><br>
  <input type="text" id="name" name="name"><br><br>
  <label for="rating">Rating:</label>
  <select name="rating" id="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select><br><br>
  <label for="preparation-time">Preparation time: </label><br>
  <label for="hours">Hours: </label>
  <input name="hours" id="hours" type="number" min="0" step="1" size="5">
  <label for="minutes">Minutes: </label>
  <input name="minutes" id="minutes" type="number" min="0" max="59" step="1"><br><br>
  <label for="description">Description</label><br>
  <textarea name="description" id="description" rows="5", cols="50"></textarea>
</form>